<?xml version="1.0"?>
<PropertyList>

 <path>rudder-trim-knob.ac</path>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>7</max-m>
    </animation>

 <animation>
  <type>rotate</type>
  <object-name>KnobTop</object-name>
  <object-name>Knob</object-name>
  <property>controls/flight/rudder-trim</property>
  <factor>1440</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>-1</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>controls/flight/rudder-trim</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-45</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>45</dep>
   </entry>
  </interpolation>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>-1</z>
  </axis>
 </animation>

</PropertyList>
